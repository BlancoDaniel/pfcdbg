<%= form_with model: @event do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_select :date %>
  </div>
  <div>
    <%= form.label :ticket_quantity, style: "display: block" %>
    <%= form.number_field :ticket_quantity %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name%>
  </div>

  <div>
    <%= form.submit %>
  </div>


<% end %>
