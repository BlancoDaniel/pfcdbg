<div class="col">
  <div class="d-flex flex-column w-100">
    <div class="d-flex flex-sm-row flex-wrap gap-2">
      <%= link_to event_path(event.id), class: 'card shadow-sm text-decoration-none' do %>
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
        </svg>
        <div class="card-body">
          <h2><%= event.name %></h2>
          <p class="card-text"><%= event.price %>â‚¬</p>
          <p class="card-text"><%= event.description.truncate(100) %></p>
          <p class="card-text"><%= event.date.strftime("%d %B %Y %H:%M") %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
