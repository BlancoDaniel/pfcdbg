<div class="row gx-4 gx-lg-5 align-items-center">
  <div class="col-xl-6">
    <%=image_tag event.poster, class: "img-fluid rounded" if event.poster.attached?%>
  </div>
  <div class="col-xl-6">
    <h1 class="display-5 fw-bolder"><%= event.name %></h1>
    <p><%= event.ticket_quantity %> entradas disponibles</p>
    <p class="text-justify">
      <%= event.description %>
    </p>
    <div class="fs-5 d-flex">
      <p class="me-3"><%= event.price %>â‚¬</p>
      <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem">
      <button class="btn btn-outline-dark flex-shrink-0" type="button">
        <i class="bi-cart-fill me-1"></i>
