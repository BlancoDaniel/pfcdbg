<section class="py-5">
  <div class="container px-4 px-lg-5 my-5">
    <%= link_to t(".edit"), edit_event_path(@event), class: "btn" if policy(@event).update? %>
    <%= link_to t(".delete"), event_path(@event), class: "btn", data: {
      turbo_method: :delete,
      turbo_confirm: t("common.confirm"),
    } if policy(@event).destroy? %>

    <%= render partial: 'event_details', locals: { event: @event } %>

  </div>
</section>

