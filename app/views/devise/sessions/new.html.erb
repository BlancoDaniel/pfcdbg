<section>
  <div class="container py-5">
    <div class="row d-flex justify-content-center">
      <div class="col col-md-8">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black session-form">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <h4 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h4>
                  <div class="field mb-3 pb-3">
                    <%= f.label :email, class: "form-label" %><br/>
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= f.label :password, class: "form-label" %><br/>
                    <%= f.password_field :password, class: "form-control" %>
                  </div>

                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, class: "form-label" %>
                    </div>
                  <% end %>
                  <div class="pt-1 mb-4 d-flex justify-content-center">
                    <%= f.submit "Login", class: "btn" %>
                  </div>
                  <%= render "devise/shared/links" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>